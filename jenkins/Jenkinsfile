pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/M-aataoui/inventory-app-fullstack.git'
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t inventory-backend ./backend'
                sh 'docker build -t inventory-frontend ./frontend'
            }
        }

    }
}
